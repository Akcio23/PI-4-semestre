{
  "extends": ["plugin:prettier/recommended", "eslint:recommended"],
  "plugins": ["prettier"],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true,
        "semi": false,
        "trailingComma": "all",
        "printWidth": 80
      }
    ]
  },
  "globals": {
    "process": "readonly",
    "console": "readonly",
    "mongoose": "readonly",
    "app": "readonly",
    "test": "readonly",
    "require": "readonly"
  }
}
